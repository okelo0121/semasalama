{
  "manifest_version": 2,
  "name": "Sema Salama",
  "version": "1.0",
  "description": "Detects and blurs local-language hate speech on social media.",
  "permissions": ["storage", "activeTab", "tabs", "*://*/*"],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.twitter.com/*",
        "*://*.youtube.com/*",
        "*://*.instagram.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],

  "web_accessible_resources": ["dataset.json"],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },

  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  }
}
